<div class="max-w-md mx-auto bg-white p-8 rounded-lg shadow-md">
  <!-- Title -->
  <h1 class="text-2xl font-semibold text-center text-zinc-900 mb-2">Login to
    Your Account</h1>
  <p class="text-center text-sm text-gray-500 mb-6">Login to get back to it!</p>

  <form
    hx-post="/api/auth/login"
    hx-target="#app"
    hx-swap="innerHTML"
    class="space-y-4"
  >
    <!-- Error Message (only shown if errorMessage is passed) -->
    {{#if errorMessage}}
      <div
        class="bg-red-100 border border-red-400 text-red-700 px-4 py-2 rounded mb-6 text-sm"
      >
        {{errorMessage}}
      </div>
    {{/if}}
    <div class="flex flex-col justify-start items-start">
      <label for="email" class="block font-medium text-gray-700">Email</label>
      <input
        type="email"
        id="email"
        name="email"
        required
        class="w-full border border-gray-300 rounded-md py-2 px-4 mt-1 focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
      />
    </div>

    <div class="flex flex-col justify-start items-start">
      <label
        for="password"
        class="block text-sm font-medium text-gray-700"
      >Password</label>
      <input
        type="password"
        id="password"
        name="password"
        required
        class="w-full border border-gray-300 rounded-md py-2 px-4 mt-1 focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
      />
    </div>

    <button
      type="submit"
      class="w-full bg-zinc-800 hover:bg-zinc-900 text-white py-2 px-4 rounded shadow mt-4"
    >
      Login
    </button>
  </form>

  <!-- Signup Navigation -->
  <p class="text-center text-sm text-gray-500 mt-4">
    Don't have an account?
    <a
      hx-get="/htmx/signup"
      hx-target="#app"
      hx-push-url="/signup"
      hx-swap="innerHTML"
      class="text-blue-500 hover:underline hover:cursor-pointer"
    >
      Sign up
    </a>
  </p>
</div>
<!-- Title -->
<p class="text-base !text-gray-900 mb-4">Anyone with the link will be able to access your wishlist.</p>
<!-- Buttons Container -->
<div class="flex flex-col gap-2">
  <!-- Copy Link Button -->

  <button
    id="copyLinkButton"
    class="text-zinc-800 px-3 py-4 w-full rounded-md bg-zinc-100 hover:bg-zinc-200 hover:border-zinc-500"
    onclick="navigator.clipboard.writeText('{{wishlistLink}}').then(() => { this.innerHTML = '✔️ Copied!'; setTimeout(() => { this.innerHTML = '📋 Copy Link'; }, 2000); });"
  >
    <span>📋</span>
    <span>Copy Link</span>
  </button>

  <!-- Share on X (Twitter) -->
  <a
    href="https://twitter.com/intent/tweet?url={{wishlistLink}}&text=Check out my wishlist!"
    target="_blank"
    class="text-zinc-800 w-full py-4 px-3 flex items-center justify-center gap-2 rounded-md bg-zinc-100 hover:bg-zinc-200 hover:border-zinc-500"
  >
    <span>🐦</span>
    <span>Share on X</span>
  </a>

  <!-- Share on Facebook -->
  <a
    href="https://www.facebook.com/sharer/sharer.php?u={{wishlistLink}}"
    target="_blank"
    class="text-zinc-800 w-full py-4 px-3 rounded-md bg-zinc-100 flex items-center justify-center gap-2 hover:bg-zinc-200 hover:border-zinc-500"
  >
    <span>📘</span>
    <span>Share on Facebook</span>
  </a>

  <!-- Share on WhatsApp -->
  <a
    href="https://wa.me/?text=Check out my wishlist: {{wishlistLink}}"
    target="_blank"
    class="text-zinc-800 w-full py-4 px-3 rounded-md bg-zinc-100 flex items-center justify-center gap-2 hover:bg-zinc-200 hover:border-zinc-500"
  >
    <span>📱</span>
    <span>Share on WhatsApp</span>
  </a>
</div>
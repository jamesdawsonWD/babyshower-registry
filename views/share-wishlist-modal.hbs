<!-- Title -->
<p class="text-base !text-gray-900 mb-4">Anyone with the link will be able to
  access your wishlist.</p>

<!-- Buttons Container -->
<div class="flex flex-col gap-2">
  <!-- Copy Link Button -->
  <button
    id="copyLinkButton"
    class="text-zinc-800 px-3 py-4 w-full rounded-md bg-zinc-100 hover:bg-zinc-200 hover:border-zinc-500"
    onclick="navigator.clipboard.writeText('{{wishlistLink}}').then(() => { this.innerHTML = '✔️ Copied!'; setTimeout(() => { this.innerHTML = '📋 Copy Link'; }, 2000); });"
  >
    <span>📋</span>
    <span>Copy Link</span>
  </button>

  <!-- Share on X (formerly Twitter) -->
  <a
    href="https://twitter.com/intent/tweet?url={{wishlistLink}}&text=Check out my wishlist!"
    target="_blank"
    class="text-zinc-800 w-full py-4 px-3 flex items-center justify-center gap-2 rounded-md bg-zinc-100 hover:bg-zinc-200 hover:border-zinc-500"
  >
    <svg
      xmlns="http://www.w3.org/2000/svg"
      viewBox="0 0 24 24"
      width="24"
      height="24"
    >
